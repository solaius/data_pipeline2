# API Settings
API_V1_STR=/api/v1
PROJECT_NAME="Document Processing Pipeline"
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
API_PORT=8000 #default to 8000

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# Elasticsearch Settings
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_USE_SSL=false

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Document Processing Settings
MAX_CHUNK_SIZE=1000
BATCH_SIZE=50
DOCLING_TEMP_DIR=/tmp/docling

# Embedding Settings
# Nomic Embeddings
NOMIC_API_KEY=your-nomic-api-key
NOMIC_API_URL=https://api.nomic.ai/v1/embeddings
NOMIC_MODEL=nomic-embed-text-v1.5

# Granite Embeddings
GRANITE_API_KEY=your-granite-api-key
GRANITE_API_URL=https://api.granite.ai/v1/embeddings
GRANITE_MODEL=Granite-Embedding-278m-multilingual

# Security Settings
CORS_ORIGINS=["*"]  # For production, specify actual origins
RATE_LIMIT_PER_MINUTE=100

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO
JSON_LOGS=true